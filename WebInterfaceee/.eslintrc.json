{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "env": {
        "browser": true
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "max-len": ["error", 200],
        //"brace-style": ["error", "stroustrup"],
        "arrow-body-style": ["error", "always"],
        "no-param-reassign": ["error", { "props": false }],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4]
    }
}
